    shift:                              'Z'
}

key SEMICOLON {
    label:                              'S'
    base:                               's'
    shift:                              'S'
}

key ESCAPE {
    base:                               '\u001B'
    shift:                              fallback BACK
    alt, meta:                          fallback HOME
    ctrl:                               fallback MENU
}

### Numeric keypad ###

key NUMPAD_0 {
    label:                              '0'
    base:                               fallback INSERT
    numlock:                            '0'
}

key NUMPAD_1 {
    label:                              '1'
    base:                               fallback MOVE_END
    numlock:                            '1'
}

key NUMPAD_2 {
    label:                              '2'
