key SPACE {
    label:                              ' '
    base:                               ' '
    ctrl:                               fallback LANGUAGE_SWITCH
}

key ENTER {
    label:                              '\n'
    base:                               '\n'
}

key COMMA {
    label:                              'W'
    base:                               'w'
    shift,capslock:                     'W'
    ralt:                               '2'
}

key PERIOD {
    label:                              'V'
    base:                               'v'
